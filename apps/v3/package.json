{
	"name": "v3",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "svelte-kit sync && vite dev",
		"build": "svelte-kit sync && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "../../node_modules/.bin/prettier --write .",
		"lint": "../../node_modules/.bin/prettier --check . && ../../node_modules/.bin/eslint .",
		"test:unit": "vitest",
		"test": "bun run test:unit -- --run",
		"gen:api": "openapi-typescript ./openapi.json -o ./src/lib/api/schema.d.ts"
	},
	"dependencies": {
		"@untron/connectkit": "file:../../packages/connectkit",
		"@untron/stylekit": "file:../../packages/stylekit",
		"@untron/ui": "file:../../packages/ui",
		"@wagmi/connectors": "^7.0.2",
		"@wagmi/core": "^3.0.0",
		"bits-ui": "^2.14.4",
		"openapi-fetch": "^0.15.0",
		"viem": "^2.40.0"
	},
	"devDependencies": {
		"@castlenine/svelte-qrcode": "^2.3.0",
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.39.1",
		"@internationalized/date": "^3.10.0",
		"@lucide/svelte": "^0.561.0",
		"@sveltejs/adapter-static": "^3.0.9",
		"@sveltejs/kit": "^2.48.5",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"@types/node": "^22",
		"clsx": "^2.1.1",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.0",
		"globals": "^16.5.0",
		"layerchart": "2.0.0-next.43",
		"openapi-typescript": "^7.10.1",
		"prettier": "3.6.x",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"svelte": "^5.43.8",
		"svelte-check": "^4.3.4",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.17",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.47.0",
		"vite": "^7.2.2",
		"vitest": "^4.0.10"
	}
}
