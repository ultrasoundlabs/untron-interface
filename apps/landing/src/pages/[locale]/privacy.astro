---
import { locales } from '../../i18n/locales.js';
import { getLandingDictionary } from '../../i18n/dictionaries';
import BaseLayout from '../../layouts/BaseLayout.astro';

export function getStaticPaths() {
  return locales
    .filter((locale) => locale.code !== 'en')
    .map((locale) => ({ params: { locale: locale.code.toLowerCase() } }));
}

const locale = Astro.params.locale ?? 'en';
const t = getLandingDictionary(locale);
const isEs = locale === 'es';
---

<BaseLayout t={t}>
  <main id="main-content">
    <section class="section reveal" aria-labelledby="privacy-title">
      <div class="section-heading">
        <h1 id="privacy-title">{isEs ? 'Aviso de privacidad' : 'Privacy Notice'}</h1>
        <p>
          {isEs ? 'Última actualización: 9 de febrero de 2026' : 'Last updated: February 9, 2026'}
        </p>
      </div>

      <article class="security-card">
        <h3>{isEs ? 'Alcance de este aviso' : 'What this page covers'}</h3>
        <p>
          {
            isEs
              ? 'Este aviso explica cómo se manejan datos en el sitio de marketing untron.finance. Las transacciones del bridge ocurren en blockchains públicas y no son privadas por defecto.'
              : 'This notice explains how data is handled on the marketing site at untron.finance. Bridge transactions occur on public blockchains and are not private by default.'
          }
        </p>

        <h3>{isEs ? 'Datos que recopilamos' : 'Data we collect'}</h3>
        <p>
          {
            isEs
              ? 'Podemos procesar datos básicos de interacción (por ejemplo vistas, selección de idioma y clics en CTAs) para mejorar UX y rendimiento del producto.'
              : 'We may process basic site interaction data (for example page views, language selection, and CTA clicks) to improve product UX and performance.'
          }
        </p>

        <h3>Local storage</h3>
        <p>
          {
            isEs
              ? 'Este sitio guarda tu preferencia de tema en localStorage del navegador bajo la clave'
              : 'This site stores your theme preference in browser localStorage under the key'
          }
          <code>theme</code>.
        </p>

        <h3>{isEs ? 'Servicios de terceros' : 'Third-party services'}</h3>
        <p>
          {
            isEs
              ? 'Enlaces externos (docs, redes sociales, proveedores de wallets/exchanges) tienen sus propias prácticas de privacidad. Revisa sus políticas por separado.'
              : 'External links (docs, social platforms, wallet/exchange providers) have their own privacy practices. Review their policies separately.'
          }
        </p>

        <h3>{isEs ? 'Tus opciones' : 'Your choices'}</h3>
        <p>
          {
            isEs
              ? 'Puedes limpiar localStorage en tu navegador y evitar conectar wallets si no deseas comportamiento asociado a wallet.'
              : 'You can clear localStorage in your browser and avoid connecting wallets if you do not want wallet-linked behavior.'
          }
        </p>

        <h3>{isEs ? 'Contacto' : 'Contact'}</h3>
        <p>
          {isEs ? 'Consultas de privacidad pueden enviarse a' : 'Privacy questions can be sent to'}
          <a class="text-link" href={t.links.contactEmail}> contact@untron.finance</a>.
        </p>
      </article>
    </section>
  </main>
</BaseLayout>
