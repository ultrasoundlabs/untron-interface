---
import { locales } from '../../i18n/locales.js';
import { getLandingDictionary } from '../../i18n/dictionaries';
import BaseLayout from '../../layouts/BaseLayout.astro';

export function getStaticPaths() {
  return locales
    .filter((locale) => locale.code !== 'en')
    .map((locale) => ({ params: { locale: locale.code } }));
}

const locale = Astro.params.locale ?? 'en';
const t = getLandingDictionary(locale);
const isEs = locale === 'es';
---

<BaseLayout t={t}>
  <main id="main-content">
    <section class="section reveal" aria-labelledby="terms-title">
      <div class="section-heading">
        <h1 id="terms-title">{isEs ? 'Términos de uso' : 'Terms of Use'}</h1>
        <p>
          {isEs ? 'Última actualización: 9 de febrero de 2026' : 'Last updated: February 9, 2026'}
        </p>
      </div>

      <article class="security-card">
        <h3>{isEs ? 'Alcance' : 'Scope'}</h3>
        <p>
          {
            isEs
              ? 'Este sitio brinda información sobre Untron y enlaces a la aplicación de bridge. El uso de la aplicación y del protocolo puede estar sujeto a términos adicionales.'
              : 'This site provides information about Untron and links to the bridge application. Use of the application and protocol may be subject to additional terms.'
          }
        </p>

        <h3>{isEs ? 'Servicio no custodial' : 'Non-custodial service'}</h3>
        <p>
          {
            isEs
              ? 'Untron está diseñado como un sistema no custodial. Eres responsable de tu wallet, claves, direcciones y confirmaciones de transacción.'
              : 'Untron is designed as a non-custodial system. You are responsible for your wallet, keys, addresses, and transaction confirmations.'
          }
        </p>

        <h3>{isEs ? 'Riesgos' : 'Risk disclosure'}</h3>
        <p>
          {
            isEs
              ? 'Las transacciones blockchain son irreversibles y pueden implicar riesgos de mercado, técnicos y operativos. Verifica los detalles de ruta y la dirección destino antes de enviar fondos.'
              : 'Blockchain transactions are irreversible and may involve market, technical, and operational risks. You should verify route details and destination addresses before sending funds.'
          }
        </p>

        <h3>{isEs ? 'Cumplimiento' : 'Compliance'}</h3>
        <p>
          {
            isEs
              ? 'Eres responsable de cumplir las leyes y regulaciones aplicables en tu jurisdicción, incluidas obligaciones fiscales y de sanciones.'
              : 'You are responsible for complying with laws and regulations applicable in your jurisdiction, including sanctions and tax obligations.'
          }
        </p>

        <h3>{isEs ? 'Cambios' : 'Changes'}</h3>
        <p>
          {
            isEs
              ? 'Podemos actualizar estos términos con el tiempo. El uso continuo del sitio después de cambios implica aceptación de la versión actualizada.'
              : 'We may update these terms over time. Continued use of this site after updates means you accept the revised terms.'
          }
        </p>

        <h3>{isEs ? 'Contacto' : 'Contact'}</h3>
        <p>
          {
            isEs
              ? 'Las consultas sobre estos términos pueden enviarse a'
              : 'Questions about these terms can be sent to'
          }
          <a class="text-link" href={t.links.contactEmail}> contact@untron.finance</a>.
        </p>
      </article>
    </section>
  </main>
</BaseLayout>

